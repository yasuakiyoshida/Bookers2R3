    <% if @book.errors.any? %>
      <div class = "error_explanation"><!-- エラー内容はclassで囲っておく -->
        <h3><%=pluralize(book.errors.count, "error") %> prohibited this obj from being saved:</h3><!-- pluralizeメソッドでエラーの数を複数形かどうか判断する -->
        <ul><!-- エラーメッセージをリストとして表示する -->
          <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div class = "row">
      <div class = "col-md-3">
        <h2>User info</h2>
        <%= attachment_image_tag user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size: "100x100" %>
        <table class = "table">
          <tbody>
            <tr></tr>
            <tr>
              <th>name</th>
              <th><%= user.name %></th>
            </tr>
            <tr>
              <th>introduction</th>
              <th><%= user.introduction %></th>
            </tr>
          </tbody>
        </table>
        <div class = "row">
          <%= link_to "", edit_user_path(user), class: "btn btn-outline-secondary btn-block fas fa-user-cog" %>
        </div>
        
        <h2 class = "mt-3">New book</h2>
        <%= form_with model:book, local:true do |f| %>
          <div class = "form-group">
            <label for = "book_title">Title</label>
            <%= f.text_field :title, class: "form-control", id: "book_title" %>
          </div>
          <div class = "form-group">
            <label for = "book_body">Opinion</label>
            <%= f.text_area :body, class: "form-control", id: "book_body" %>
          </div>
          <div class = "form-group">
            <%= f.submit 'Create Book', class: "btn btn-success" %>
          </div>
        <% end %>
      </div>